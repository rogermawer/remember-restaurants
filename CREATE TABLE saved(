CREATE TABLE saved(
   id serial PRIMARY KEY,
   res_id INT NOT NULL,
   acc_id INT NOT NULL,
   saved_on TIMESTAMP NOT NULL,
   FOREIGN KEY (res_id) REFERENCES restaurants(id),
   FOREIGN KEY (acc_id) REFERENCES accounts(id)
);

SELECT restaurants.*, saved.res_id from restaurants INNER JOIN saved ON restaurants.id = saved.res_id;


ALTER TABLE saved DROP CONSTRAINT saved_res_id_fkey,
ADD CONSTRAINT saved_res_id_fkey foreign key (res_id) references restaurants(id) on delete cascade;